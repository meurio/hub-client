{
  "presets": [
    "es2015",
    "react",
    "stage-0"
  ],
  "plugins": [
    "transform-decorators-legacy",
    ["module-resolver", {
      "alias": {
        "~client": "./client",
        "~account": "./client/account",
        "~community": "./client/community",
        "~components": "./client/components",
        "~images": "./client/images",
        "~mobilizations": "./client/mobilizations",
        "~mobrender": "./client/mobrender",
        "~styles": "./client/styles",
        "~utils": "./client/utils",
        "~widget-plugins": "./client/mobilizations/widgets/__plugins__",
        "~routes": "./routes",
        "~server": "./server",
        "~tools": "./tools"
      }
    }]
  ],
  "env": {
    "test": {
      "presets": ["react-optimize"],
      "plugins": [
        ["webpack-loaders", {
          "config": "./tools/webpack.test.config.js",
          "verbose": false
        }],
        "transform-react-stateless-component-name",
        "istanbul",
      ]
    },
    "production": {
      "presets": ["react-optimize"]
    }
  }
}
